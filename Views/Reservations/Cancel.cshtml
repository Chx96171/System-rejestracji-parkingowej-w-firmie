@model SystemRejestracjiParkingowej.Models.Reservation

@{
    ViewData["Title"] = "Anulowanie rezerwacji";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger">
                <h4 class="alert-heading">Potwierdzenie anulowania</h4>
                <p>Czy na pewno chcesz anulować rezerwację na miejsce parkingowe <strong>#@Model.ParkingSpot.SpotNumber</strong>?</p>
                <p class="mb-0">Ta operacja jest nieodwracalna!</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Cancel" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger w-100">Anuluj rezerwację</button>
                    </form>
                </div>
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-secondary w-100">Powrót</a>
                </div>
            </div>
        </div>
    </div>
</div>