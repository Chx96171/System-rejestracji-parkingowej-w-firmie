                    <th>Status</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.ParkingSpot?.SpotNumber</td>
                        <td>@reservation.Vehicle?.RegistrationNumber</td>
                        <td>@reservation.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@reservation.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@reservation.Status</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@reservation.Id" class="btn btn-sm btn-info">SzczegÃ³Å‚y</a>
                            @if (reservation.Status == "Pending")
                            {
                                <form asp-action="Cancel" asp-route-id="@reservation.Id" method="post" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">Anuluj</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center py-5">
