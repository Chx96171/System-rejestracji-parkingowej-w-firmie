@{
    ViewData["Title"] = "Strona główna";
}

<div class="text-center">
    <div class="jumbotron py-5">
        <h1 class="display-4">🚗 System Parkingowy</h1>
        <p class="lead">Witaj w systemie zarządzania parkingiem firmowym</p>
        
        @if (!User.Identity.IsAuthenticated)
        {
            <hr class="my-4" />
            <p>Zaloguj się lub zarejestruj, aby zarządzać swoimi pojazdami i rezerwacjami</p>
            <div class="mt-4">
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg me-2">Zaloguj się</a>
                <a href="@Url.Action("Register", "Account")" class="btn btn-outline-primary btn-lg">Zarejestruj się</a>
            </div>
        }
        else
        {
            <hr class="my-4" />
            <div class="row mt-5">
                <div class="col-md-4 mb-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <h3>🚗 Moje pojazdy</h3>
                            <p class="text-muted">Zarządzaj swoimi pojazdami</p>
                            <a href="@Url.Action("Index", "Vehicles")" class="btn btn-primary">Przejdź</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <h3>📅 Rezerwacje</h3>
                            <p class="text-muted">Zarządzaj rezerwacjami miejsc</p>
                            <a href="@Url.Action("Index", "Reservations")" class="btn btn-primary">Przejdź</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <h3>🎨 Demo wzorców</h3>
                            <p class="text-muted">Zobacz wzorce projektowe w akcji</p>
                            <a href="@Url.Action("Index", "Patterns")" class="btn btn-info">Przejdź</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
