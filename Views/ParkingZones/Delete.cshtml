@model SystemRejestracjiParkingowej.Models.ParkingZone

@{
    ViewData["Title"] = "Usuń strefę";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (ViewBag.ActiveReservations != null && ViewBag.ActiveReservations > 0)
            {
                <div class="alert alert-danger" role="alert">
                    <strong>❌ Nie można usunąć strefy!</strong> Miejsca w tej strefie mają @ViewBag.ActiveReservations aktywnych rezerwacji.
                </div>
                
                <p class="text-muted">Aby usunąć tę strefę, musisz najpierw anulować wszystkie aktywne rezerwacje lub poczekać aż się zakończą.</p>
                
                <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
            }
            else
            {
                <div class="alert alert-danger">
                    <h4 class="alert-heading">Potwierdzenie usunięcia</h4>
                    <p>Czy na pewno chcesz usunąć strefę <strong>@Model.Name</strong>?</p>
                    <p class="mb-0">Ta operacja jest nieodwracalna!</p>
                </div>

                @if (Model.ParkingSpots != null && Model.ParkingSpots.Any())
                {
                    <div class="alert alert-warning">
                        <strong>⚠️ Uwaga!</strong> Usunięcie strefy spowoduje również usunięcie @Model.ParkingSpots.Count miejsc parkingowych.
                    </div>
                }

                @if (ViewBag.TotalReservations != null && ViewBag.TotalReservations > 0)
                {
                    <div class="alert alert-info">
                        <strong>ℹ️ Informacja:</strong> Miejsca w tej strefie mają @ViewBag.TotalReservations historycznych rezerwacji, które zostaną również usunięte.
                    </div>
                }

                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                            <button type="submit" class="btn btn-danger w-100">Usuń strefę</button>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-secondary w-100">Anuluj</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>