@model SystemRejestracjiParkingowej.Models.ParkingZone

@{
    ViewData["Title"] = "Edytuj strefę";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Edytuj strefę parkingową</h1>
            <hr />

            <form asp-action="Edit" asp-route-id="@Model.Id">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ZoneType" class="form-label"></label>
                    <select asp-for="ZoneType" class="form-select">
                        <option value="">-- Wybierz typ --</option>
                        <option value="VIP">VIP (90 dni max rezerwacji)</option>
                        <option value="Employee">Pracownicza (30 dni max rezerwacji)</option>
                        <option value="Public">Publiczna (7 dni max rezerwacji)</option>
                        <option value="Underground">Podziemny (30 dni max rezerwacji)</option>
                        <option value="Outdoor">Na zewnątrz (30 dni max rezerwacji)</option>
                        <option value="Covered">Zadaszony (30 dni max rezerwacji)</option>
                    </select>
                    <span asp-validation-for="ZoneType" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}