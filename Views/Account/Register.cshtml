@using Microsoft.AspNetCore.Identity
@model SystemRejestracjiParkingowej.Controllers.RegisterViewModel

@{
    ViewData["Title"] = "Rejestracja";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Rejestracja nowego konta</h3>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <strong>Błędy:</strong>
                            <ul>
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    @foreach (var error in modelState.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                        </div>
                    }

                    <form method="post" asp-action="Register" asp-controller="Account">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Adres e-mail</label>
                            <input type="email" name="Email" class="form-control" placeholder="nazwa@firma.pl" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Imię</label>
                            <input type="text" name="FirstName" class="form-control" placeholder="Jan" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nazwisko</label>
                            <input type="text" name="LastName" class="form-control" placeholder="Kowalski" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Numer telefonu</label>
                            <input type="tel" name="PhoneNumber" class="form-control" placeholder="+48 123 456 789" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hasło</label>
                            <input type="password" name="Password" class="form-control" placeholder="Minimum 6 znaków" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Potwierdź hasło</label>
                            <input type="password" name="ConfirmPassword" class="form-control" placeholder="Powtórz hasło" required />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Zarejestruj się</button>
                    </form>

                    <hr />
                    <p class="text-center">
                        Masz już konto? <a href="@Url.Action("Login", "Account")">Zaloguj się tutaj</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>