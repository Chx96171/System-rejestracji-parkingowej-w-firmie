@using Microsoft.AspNetCore.Identity
@model SystemRejestracjiParkingowej.Controllers.LoginViewModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Logowanie do systemu</h3>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <strong>Błędy:</strong>
                            <ul>
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    @foreach (var error in modelState.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                        </div>
                    }

                    <form method="post" asp-action="Login" asp-controller="Account">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Adres e-mail</label>
                            <input type="email" name="Email" class="form-control" placeholder="nazwa@firma.pl" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hasło</label>
                            <input type="password" name="Password" class="form-control" placeholder="••••••••" required />
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" name="RememberMe" class="form-check-input" />
                            <label class="form-check-label">Zapamiętaj mnie</label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Zaloguj się</button>
                    </form>

                    <hr />
                    <p class="text-center">
                        Nie masz konta? <a href="@Url.Action("Register", "Account")">Zarejestruj się tutaj</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>