@model SystemRejestracjiParkingowej.Models.ParkingSpot

@{
    ViewData["Title"] = "Usuń miejsce";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (ViewBag.ActiveReservations != null && ViewBag.ActiveReservations > 0)
            {
                <div class="alert alert-danger" role="alert">
                    <strong>❌ Błąd!</strong> @ViewBag.Error
                </div>
                
                <p class="text-muted">Aby usunąć to miejsce, musisz najpierw anulować wszystkie aktywne rezerwacje.</p>
                
                <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
            }
            else
            {
                <div class="alert alert-danger">
                    <h4 class="alert-heading">Potwierdzenie usunięcia</h4>
                    <p>Czy na pewno chcesz usunąć miejsce parkingowe <strong>#@Model.SpotNumber</strong>?</p>
                    <p class="mb-0">Ta operacja jest nieodwracalna!</p>
                </div>

                @if (ViewBag.TotalReservations != null && ViewBag.TotalReservations > 0)
                {
                    <div class="alert alert-info">
                        <strong>ℹ️ Informacja:</strong> To miejsce ma @ViewBag.TotalReservations historycznych rezerwacji, które zostaną również usunięte.
                    </div>
                }

                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Delete" method="post">
                            <button type="submit" class="btn btn-danger w-100">Usuń miejsce</button>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-secondary w-100">Anuluj</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>