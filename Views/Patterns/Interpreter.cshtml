@{
    ViewData["Title"] = ViewBag.Title ?? "Demonstracja Wzorca";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Powrót do listy</a>
    </div>

    <div class="card">
        <div class="card-body">
            <pre style="background-color: #f8f9fa; padding: 20px; border-radius: 5px; overflow-x: auto;">@ViewBag.Results</pre>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index")" class="btn btn-primary">Powrót do listy wzorców</a>
        <a href="@Url.Action("Summary")" class="btn btn-info">Zobacz podsumowanie</a>
    </div>
</div>
